  "code": "import Utility from \"../Mod/Utility\";\r\nexport default class GameUI extends Laya.Scene {\r\n    constructor() {\r\n        super();\r\n        this.touchPanel = null;\r\n        this.drawSp = this['drawSp'];\r\n        this.startPos = null;\r\n        this.lineArr = [];\r\n    }\r\n    onOpened(param) {\r\n        this.initData();\r\n    }\r\n    onClosed() {\r\n    }\r\n    initData() {\r\n        this.touchPanel = this['touchPanel'];\r\n        this.touchPanel.on(Laya.Event.MOUSE_DOWN, this, this.touchStart);\r\n        this.touchPanel.on(Laya.Event.MOUSE_MOVE, this, this.touchMove);\r\n        this.touchPanel.on(Laya.Event.MOUSE_UP, this, this.touchEnd);\r\n    }\r\n    touchStart(event) {\r\n        this.startPos = new Laya.Vector2(event.stageX, event.stageY);\r\n        this.lineArr = [];\r\n        this.lineArr.push(this.startPos.x);\r\n        this.lineArr.push(this.startPos.y);\r\n    }\r\n    touchMove(event) {\r\n        let p = new Laya.Vector2(event.stageX, event.stageY);\r\n        let dis = Utility.calcDistance(this.startPos, p);\r\n        if (dis >= 5) {\r\n            this.lineArr.push(p.x);\r\n            this.lineArr.push(p.y);\r\n            this.startPos = p;\r\n            this.drawLine();\r\n        }\r\n    }\r\n    touchEnd(event) {\r\n    }\r\n    drawLine() {\r\n        this.drawSp.graphics.clear();\r\n        this.drawSp.graphics.drawLines(0, 0, this.lineArr, \"#ff0000\", 3);\r\n    }\r\n}\r\n",
